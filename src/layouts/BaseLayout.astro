---
import '../styles/global.css';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
	title: string;
	description?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { title, description = t('hero.subtitle') } = Astro.props;
import { languages } from '../i18n/ui';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | {t('site.name')}</title>
	</head>
	<body>
		<header>
			<div class="container" style="display: flex; justify-content: space-between; width: 100%; align-items: center;">
				<a href={lang === 'en' ? '/' : `/${lang}/`} class="logo">
					<img src="/apple-touch-icon.png" alt="Aion Logo" onerror="this.src='/favicon.svg'" />
					<span>{t('site.name')}</span>
				</a>
				<nav>
					<a href="#features">{t('nav.features')}</a>
					<a href="#pricing">{t('nav.pricing')}</a>
					<a href="mailto:aion@7caifei.com">{t('nav.support')}</a>
					<div class="lang-selector-wrapper">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
						<select onchange="window.location.href = this.value">
							{Object.entries(languages).map(([code, label]) => (
								<option value={code === 'en' ? '/' : `/${code}/`} selected={lang === code}>
									{label}
								</option>
							))}
						</select>
					</div>
				</nav>
			</div>
		</header>
		
		<slot />

		<footer>
			<div class="container">
				<div class="footer-content">
					<div>
						<div class="logo" style="margin-bottom: 20px; font-size: 1.2rem;">
							<img src="/apple-touch-icon.png" alt="Aion Logo" style="width: 30px; height: 30px;" />
							<span>{t('site.name')}</span>
						</div>
						<p>Zero Friction, Zero Distraction.</p>
						<p style="margin-top: 8px;">{t('hero.subtitle')}</p>
					</div>
					<div class="footer-links">
						<div style="display: flex; flex-direction: column; gap: 12px;">
							<h4 style="color: #fff;">{t('nav.features')}</h4>
							<a href="#features" style="color: var(--text-secondary);">{t('features.autoquit.title')}</a>
							<a href="#features" style="color: var(--text-secondary);">{t('features.scenes.title')}</a>
							<a href="#features" style="color: var(--text-secondary);">{t('features.smart.title')}</a>
						</div>
						<div style="display: flex; flex-direction: column; gap: 12px;">
							<h4 style="color: #fff;">Legal</h4>
							<a href={lang === 'en' ? '/privacy' : `/${lang}/privacy`} style="color: var(--text-secondary);">{t('footer.privacy')}</a>
							<a href={lang === 'en' ? '/terms' : `/${lang}/terms`} style="color: var(--text-secondary);">{t('footer.terms')}</a>
						</div>
						<div style="display: flex; flex-direction: column; gap: 12px;">
							<h4 style="color: #fff;">Contact</h4>
							<a href="mailto:aion@7caifei.com" style="color: var(--text-secondary);">{t('footer.contact')}</a>
						</div>
					</div>
				</div>
				<div class="footer-nav">
					<p>&copy; 2026 ProcessZero Team. {t('footer.rights')}</p>
					<div class="footer-lang">
						<div class="lang-selector-wrapper">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
							<select onchange="window.location.href = this.value">
								{Object.entries(languages).map(([code, label]) => (
									<option value={code === 'en' ? '/' : `/${code}/`} selected={lang === code}>
										{label}
									</option>
								))}
							</select>
						</div>
					</div>
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	.lang-selector-wrapper select:hover {
		color: var(--text);
		border-color: var(--text-secondary);
	}
</style>
