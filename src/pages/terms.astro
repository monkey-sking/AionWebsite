---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t('footer.terms')}>
	<main class="container" style="padding: 100px 0;">
		<h1>{t('footer.terms')}</h1>
		<div class="legal-text">
			<p>{t('terms.updated')}</p>

			<h2>{t('terms.s1.title')}</h2>
			<p>{t('terms.s1.desc')}</p>

			<h2>{t('terms.s2.title')}</h2>
			<p>{t('terms.s2.desc')}</p>

			<h2>{t('terms.s3.title')}</h2>
			<p>{t('terms.s3.desc')}</p>

			<h2>{t('terms.s4.title')}</h2>
			<p>{t('terms.s4.desc')}
				<ul>
					<li>{t('terms.s4.l1')}</li>
					<li>{t('terms.s4.l2')}</li>
					<li>{t('terms.s4.l3')}</li>
				</ul>
			</p>

			<h2>{t('terms.s5.title')}</h2>
			<p>{t('terms.s5.desc')}</p>

			<h2>{t('terms.s6.title')}</h2>
			<p>{t('terms.s6.desc')}</p>

			<h2>{t('terms.s7.title')}</h2>
			<p>{t('terms.s7.desc')}</p>

			<h2>{t('terms.s8.title')}</h2>
			<p>{t('terms.s8.desc')}</p>

			<h2>{t('terms.s9.title')}</h2>
			<p>{t('terms.s9.desc')}</p>

			<h2>{t('terms.s10.title')}</h2>
			<p>{t('terms.s10.desc')}</p>
		</div>
	</main>
</BaseLayout>
